<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context=".MainActivity" 

    android:background="#6E6E6E">
    
<LinearLayout
    android:id="@+id/LayoutRed"
    android:layout_width="150dp"
    android:layout_height="400dp"
    android:layout_marginTop="50dp"
    android:orientation="vertical" 
    android:background="#ffff0000">

    <TextView
        android:id="@+id/textRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team RED" 
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textPlayer1Red"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Player #1" />

    <TextView
        android:id="@+id/textPlayer2Red"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Player #2" />
    
    <Button
        android:id="@+id/buttonTimeoutRed"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="TIMEOUT"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonRed"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="0"
        android:textSize="80sp" />
    
</LinearLayout>

<LinearLayout
    android:id="@+id/LayoutBlue"
    android:layout_width="150dp"
    android:layout_height="400dp"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="160dp"
    android:orientation="vertical"
    android:background="#040CFC"
    android:layout_weight="10">
        
    <TextView
        android:id="@+id/textBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team BLUE" 
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="8dp"/>
    
    <TextView
        android:id="@+id/textPlayer1Blue"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Player #1" />

    <TextView
        android:id="@+id/textPlayer2Blue"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Player #2" />
    
    <Button
        android:id="@+id/buttonTimeoutBlue"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="TIMEOUT"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonBlue"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="0"
        android:textSize="80sp" />
    
</LinearLayout>

<Button
    android:id="@+id/buttonUndo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignRight="@+id/LayoutBlue"
    android:text="Undo" />

<Button
    android:id="@+id/buttonCancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:text="Cancel" />

</RelativeLayout>